{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignAutomerge": true,
    "configMigration": true,
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "dependencyDashboardLabels": [
        "dependencies",
        "tracker"
    ],
    "description": "Default base configuration for all CarrotManMatt projects.",
    "extends": [
        "replacements:all",
        "workarounds:all"
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/bower_components/**"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "groupName": "pep621",
            "matchManagers": [
                "pep621"
            ]
        },
        {
            "groupName": "github-actions",
            "matchDatasources": [
                "github-tags"
            ],
            "matchManagers": [
                "github-actions"
            ]
        },
        {
            "groupName": "github-runners",
            "matchDatasources": [
                "github-runners"
            ],
            "matchManagers": [
                "github-actions"
            ]
        },
        {
            "groupName": "pre-commit",
            "matchManagers": [
                "pre-commit"
            ]
        },
        {
            "description": "Update frequently changing pre-commit hooks on Tuesday mornings",
            "matchManagers": [
                "pre-commit"
            ],
            "matchPackageNames": [
                "renovatebot/pre-commit-hooks",
                "astral-sh/uv-pre-commit",
                "astral-sh/ruff-pre-commit"
            ],
            "schedule": [
                "* 3-8 * * 2"
            ]
        }
    ],
    "prHourlyLimit": 5,
    "pep621": {
        "ignorePaths": [
            "**/.pypi-redirects/**",
            "**/vendor/**",
            "**/examples/**",
            "**/__fixtures__/**"
        ]
    },
    "pre-commit": {
        "enabled": true
    },
    "timezone": "Europe/London"
}
